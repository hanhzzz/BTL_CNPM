@model List<BTL_CNPM.Models.tblHoSoNhanVien>
@{
    ViewBag.Title = "DanhSachUngTuyen";
    Layout = "~/Views/Shared/AccountMasterpage.cshtml";
}

<h2 class="text-center">Danh sách ứng tuyển</h2>
<table class="table table-striped table-hover">
    <tr>
        <!-- TABLE HEADING -->
        <th>Mã nhân viên</th>
        <th>Tên nhân viên</th>
        <th>Email</th>
        <th>CCCD</th>
        <th>Ngày sinh</th>
        <th>Số điện thoại</th>
        <th>Địa chỉ</th>
        <th>Học vấn & kỹ năng</th>
        <th>Kinh nghiệm & thành tích</th>
    </tr>
    <!-- TABLE DATA -->
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.sMaNV</td>
            <td>@item.sTenNV</td>
            <td>@item.sEmail</td>
            <td>@item.iCCCD</td>
            <td>@item.dNgaysinh.Value.ToString("yyyy-MM-dd")</td>
            <td>@item.iSDT</td>
            <td>@item.sDiachi</td>
            <td>@item.sHocvan</td>
            <td>@item.sKinhnghiem</td>
            @*<td>
            <button class="btn btn-info" data-toggle="modal" onclick="/Vieclam/EditViecLam/@item.sMaTD">Sửa</button>
            <button class="btn btn-danger" data-toggle="modal" onclick="/Vieclam/DeleteViecLam/@item.sMaTD">Xóa</button>
        </td>*@
        </tr>
        <tr>
            <td><a class="btn btn-success" style="color: white; text-decoration: none;" href="/Vieclam/Guithongbao?sMaNV=@item.sMaNV">Gửi thông báo</a></td>
        </tr>
    }


</table>
